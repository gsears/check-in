A sentiment response traffic light button. This is what App\Twig\AppExtension\renderRisk() generates
when passed an LabSentimentQuestionResponseRisk object.
#}

{% extends "risk_summary/response.html.twig" %}

{% block icon %}
	<i class="fa {{global_sentiment_icon}}" aria-hidden="true"></i>
{% endblock %}

{% block info %}
	<h4 class='h6 mt-2'>Response</h4>

	<small>{{text}}</small>

	<h4 class='h6 mt-2'>Analysis</h4>
	<ul>
		<li>
			<span>Classification:</span>
			{{classification}}
		</li>
		<li>
			<span>Confidence:</span>
			{{confidence * 100 |number_format(2, '.', ',')}}%
		</li>
	</ul>
{% endblock %}
